{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",  // Change this to "ESNext" or "ES2020" to support ESM
    "target": "ES2020",  // Set the target to at least ES2020 for ESM support
    "moduleResolution": "node",  // Ensure Node.js module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
